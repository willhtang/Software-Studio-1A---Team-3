                    app:layout_constraintVertical_bias="0.686" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="105dp"
                    android:layout_height="77dp"
                    android:src="@drawable/profile_2"
                    app:layout_constraintBottom_toBottomOf="parent"

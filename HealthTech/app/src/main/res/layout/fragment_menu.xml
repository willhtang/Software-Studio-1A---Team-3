<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuFragment">



    <LinearLayout
        android:id="@+id/ll_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:gravity="center"
        android:background="@color/colorHealthTech"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="188dp"
            android:layout_height="139dp"
            android:src="@drawable/profile_1"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="189dp"
            android:layout_height="32dp"
            android:text="Dr. Sam Anthony"
            android:textColor="#FFFEFE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="175dp"
            android:layout_height="27dp"
            android:layout_marginTop="7dp"
            android:text="General Practitioner"
            android:textColor="#201919"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_items"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:showDividers="middle"
        android:divider="@drawable/divider"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/ll_header">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/design_default_color_background"
            android:drawableStart="@drawable/ic_account_circle_black_24dp"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:fontFamily="sans-serif-medium"
            android:text="   My Profile"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_notifications_black_24dp"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:fontFamily="sans-serif-medium"
            android:text="   Subscription"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_appointment_black_24dp"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:fontFamily="sans-serif-medium"
            android:text="   Appointments"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="#FFFFFF"
            android:drawableStart="@drawable/ic_chat_black_24dp"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:fontFamily="sans-serif-medium"
            android:text="   Chat Room"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_settings_black_24dp"
            android:drawableEnd="@android:drawable/ic_media_play"
            android:fontFamily="sans-serif-medium"
            android:text="   Settings"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <Button
            android:id="@+id/logout"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:paddingRight="15dp"
            android:background="@drawable/active_button"
            android:drawableRight="@drawable/ic_exit_to_app_black_24dp"
            android:text="Log Out"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/menu_items"/>
</androidx.constraintlayout.widget.ConstraintLayout>